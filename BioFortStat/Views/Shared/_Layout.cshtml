                    <li>@Html.ActionLink("Market Data", "Index", "MarketData")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Explore <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Shop</a></li>
                            <li><a href="#">Resources</a></li>
                            <li><a href="#">Products Trends</a></li>
                            <li><a href="#">National Demographics</a></li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>

                </ul>
            </div>
        </nav>
    </div>
    <div class="container body-content" >
        @RenderBody()
    </div>
    <div class="container-fluid" style="background-color:black; margin: 20px;">
        <footer>
            <div class="row">
                <div class="col-sm-12" style="margin-top: 70px;margin-bottom: 40px;">
                    <div class="col-sm-2">
                        <img src="~/FooterImage/ukaid.png" />

                    </div>
                    <div class="col-sm-2">
                        <img src="~/FooterImage/iita.png" />
                    </div>
                    <div class="col-sm-3">
                        <img src="~/FooterImage/nestle.png" />
                    </div>
                    <div class="col-sm-3">
                        <img src="~/FooterImage/gain.png" />
                    </div>
                    <div class="col-sm-2">
                        <img src="~/FooterImage/unicef.png" />
                    </div>
                </div>

            </div>
            <hr />
            <div class="row">
                <div class="col-sm-12">
                    <div class="col-sm-3">
                        <h2 style="text-align:center">About Us</h2>
                        <p>
                            HarvestPlus improves nutrition and public health by developing
                            and promoting biofortified food crops that are rich in vitamins and minerals and providing
                            global leadership on biofortified evidence and technology.
                        </p>
                    </div>
                    <div class="col-sm-3">
                        <h3>Useful links</h3>
                        <p>Statistics</p>
