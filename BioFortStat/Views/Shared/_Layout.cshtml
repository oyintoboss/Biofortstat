                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SHOPPING", "Index", "BiofortStat", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("MARKETING PRICES", "Index", "BiofortStat")</li>
                   
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container">
        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="~/Views/BiofortStat/Index.cshtml" style="color:royalblue">Biofort<span style="color:forestgreen">STAT</span></a>
                </div>




                @*<li>@Html.ActionLink("User Register", "CreateUser", "UserInfo")</li>
                    <li>@Html.ActionLink("Role", "Create", "Role")</li>*@

