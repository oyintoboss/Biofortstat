                        <p>+44 208 711 3786</p>
                        <p style="color:forestgreen">Email: </p>
                        <p>info@havestplusng.org</p>
                    </div>
                    <div class="col-sm-3">
                        <h2>BiofortStat</h2>
                        <p>Subscribe Us!</p>
                        <p>
                            <input type="text" name="harvestplus" placeholder="Drop Your Email" />
                            <input type="button" class="btn btn-success" />

                        </p>
                    </div>
                </div>
            </div>
            <p> All right reserved  &copy; @DateTime.Now.Year - Trust &amp; Security Privacy Policy  Sitemap</p>
        </footer>

    </div>
    @Scripts.Render("~/bundles/lib")
   
    @RenderSection("scripts", required: false)
</body>
</html>
