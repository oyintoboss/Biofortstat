@model BioFortStat.ViewModel.RegisterViewModelssz
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.RegisterViewModelsz.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.RegisterViewModelsz.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.RegisterViewModelsz.Email)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RegisterViewModelsz.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.RegisterViewModelsz.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.RegisterViewModelsz.Password)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RegisterViewModelsz.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.RegisterViewModelsz.ConfirmPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.RegisterViewModelsz.ConfirmPassword)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RegisterViewModelsz.Users, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.RegisterViewModelsz.Users, new MultiSelectList(Model.RoleModelz, "Id", "Name"), "--Choose Role--", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.RegisterViewModelsz.Users)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
